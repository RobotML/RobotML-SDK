[template public generateMorse(model : Model)]
[file ('morse' + model.name + '.py', false, 'UTF-8')]
from morse.builder import *
# Generate robots
[generateRobots(model)/]
# Select the environement
env = Environment("[model.name/].blend")

[/file]
[/template]
