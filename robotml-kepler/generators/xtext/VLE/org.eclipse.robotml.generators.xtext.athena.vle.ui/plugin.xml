<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.adl"
            id="org.eclipse.robotml.generators.xtext.athena.vle.ui.popupMenus.contribution.IFile">
         <menu id="org.eclipse.acceleo.module.menu" label="Athena" path="additionsAcceleo">
               <groupMarker name="acceleo"/> 
         </menu>
         <action
               class="org.eclipse.robotml.generators.xtext.athena.vle.ui.popupMenus.AcceleoGenerategenerateVleAction"
               enablesFor="+"
               id="org.eclipse.robotml.generators.xtext.athena.vle.ui.popupMenus.acceleoGenerategenerateVleAction"
               icon="icons/default.gif"
               label="Generate  to VLE Simulation"
               menubarPath="org.eclipse.acceleo.module.menu/acceleo"/>
      </objectContribution>
   </extension>
  
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.papyrus.robotML.modelexplorer.popupmenu.generate">
         <command
               commandId="org.eclipse.robotML.generateVLECommand"
               icon="icons/default.gif"
               id="org.eclipse.robotML.generateVLE"
               label="Generate to VLE"
               style="push"
               tooltip="Generate code to VLE">
            <!--visibleWhen>
               <reference
                     definitionId="org.eclipse.papyrus.robotml.diagram.common.IsPapyrusActiveWithProteus">
               </reference>
            </visibleWhen-->
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.papyrus.editor.category"
            description="Generate to VLE code"
            id="org.eclipse.robotML.generateVLECommand"
            name="Generate to VLE">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.robotml.generators.acceleo.athena.ui.handler.AcceleoGenerateVLECommandHandler"
            commandId="org.eclipse.robotML.generateVLECommand">
      </handler>
   </extension>
   
</plugin>
